{% extends 'base.html.twig' %}
    {% block head %}
        <link rel="stylesheet" href="https://bootswatch.com/4/journal/bootstrap.min.css"/>
    {% endblock %}

{% block body %}
    <br>
    <br>
    <center>
        <h1 class="title">
            List by NouNou
        </h1>

        <table class="table table-dark" bgcolor="#6495ed" style="width:1000px;" >
            <tr>
                <td scope="row"><a href=""><input type="submit" name="btnU"  class="btn btn-primary" value="Create Club"/></a></td>

            </tr>
            <tr>
                <th scope="col">Message</th>
                <th scope="col">Answer</th>
                <th scope="col">Status</th>



            </tr>

            {% for Claim in Claim %}
                <tr>
                    <td scope="row">{{ Claim.message }}</td>
                    <td scope="row">{{Claim.answer}}</td>
                    <td scope="row">{{ Claim.status}}</td>

                    <td scope="row"><a href=""> <input type="submit" name="btnU"  class="btn btn-info" value="Update"/></a></td>
                    <td scope="row"><a href=""> <input type="submit" name="btnD"  class="btn btn-danger" value="Delete"/></a></td>

                </tr>


            {% endfor %}


        </table>
    </center>

{% endblock %}
